---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'PIXII - Smart link to Global flow' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
</head>
<body>
  <slot />
</body>
</html>
