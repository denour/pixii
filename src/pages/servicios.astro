    text-align: center;
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .service-icon {
    font-size: 48px;
    margin-bottom: 20px;
  }

  .service-title {
