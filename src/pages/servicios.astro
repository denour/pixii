  }

  @media (max-width: 768px) {
    .servicios-hero {
      padding: 120px 0 60px;
    }

    .servicios-title {
      font-size: 32px;
    }

    .servicios-subtitle {
      font-size: 16px;
    }

    .servicios-content {
      padding: 60px 0;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .service-card {
      padding: 30px 24px;
    }

    .service-icon {
      font-size: 40px;
    }

    .service-title {
      font-size: 20px;
    }

    .service-description {
