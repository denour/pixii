<div class="catalog-page">
  <!-- Header Section with Title -->
  <section class="catalog-header">
    <div class="container">
      <h1 class="catalog-title">Productos y Servicios</h1>
    </div>
  </section>

  <!-- Horizontal Category Cards -->
  <section class="catalog-cards" aria-label="Categorías de productos y servicios">
    {categories.map((category, index) => (
      <a
        href={`#${category.id}`}
        class="category-card"
        data-target={category.id}
        aria-label={`Ver catálogo de ${category.title}: ${category.subtitle}`}
      >
        <div class="card-background">
          <img
            src={category.image}
            alt={`${category.title} - ${category.subtitle} | PIXII`}
            class="card-image"
            width="800"
            height="600"
            loading={index === 0 ? "eager" : "lazy"}
            decoding="async"
            fetchpriority={index === 0 ? "high" : "auto"}
          />
          <div class="card-overlay"></div>
        </div>
        <div class="card-content">
          <h2 class="card-title">{category.title}</h2>
          {category.subtitle && <p class="card-subtitle">{category.subtitle}</p>}
          <span class="card-btn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
            Conocer más
          </span>
        </div>
      </a>
    ))}
  </section>

  <!-- Detail Sections (hidden by default) -->
  {categories.map((category) => (
    <section
      id={category.id}
      class="category-detail"
      data-section={category.id}
      aria-labelledby={`title-${category.id}`}
    >
      <div class="container">
        <h2 id={`title-${category.id}`} class="detail-title">{category.title}</h2>

        <div
          class="detail-grid"
          role="list"
          data-gallery={category.id}
          data-shared-gallery={category.sharedGallery ? 'true' : 'false'}
          data-gallery-images={category.sharedGallery ? JSON.stringify(category.galleryData.images) : ''}
          data-gallery-labels={category.sharedGallery ? JSON.stringify(category.galleryData.labels) : ''}
        >
          {category.items.map((item, itemIndex) => (
            <article
              class="detail-card"
              role="listitem"
              data-gallery-item
              data-index={itemIndex}
              data-gallery-images={!category.sharedGallery && item.gallery ? JSON.stringify(item.gallery) : ''}
              data-label={item.label}
              tabindex="0"
              itemscope
              itemtype="https://schema.org/Product"
            >
              <div class="detail-card-image">
                <img
                  src={item.thumbnail}
                  alt={`${item.label} - PIXII ${category.title}`}
                  width="400"
                  height="533"
                  loading="lazy"
                  decoding="async"
                  itemprop="image"
                />
              </div>
              <div class="detail-card-content">
                <h3 class="detail-card-title" itemprop="name">{item.label}</h3>
                {item.description && <p class="detail-card-description" itemprop="description">{item.description}</p>}
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  ))}
</div>

