<div class="projects-page">
  <!-- Header Section with Title -->
  <section class="projects-header">
    <div class="container">
      <h1 class="projects-title">Proyectos</h1>
    </div>
  </section>

  <!-- Horizontal Project Cards -->
  <section class="projects-cards" aria-label="Categorías de proyectos">
    {projects.map((project, index) => (
      <a
        href={`#${project.id}`}
        class="project-card"
        data-target={project.id}
        aria-label={`Ver proyectos de ${project.title}`}
      >
        <div class="card-background">
          <img
            src={project.image}
            alt={`Imagen de ${project.title}`}
            class="card-image"
            width="640"
            height="500"
            loading={index === 0 ? "eager" : "lazy"}
            decoding="async"
            fetchpriority={index === 0 ? "high" : "auto"}
          />
          <div class="card-overlay"></div>
        </div>
        <div class="card-content">
          <h2 class="card-title">{project.title}</h2>
          {project.subtitle && <p class="card-subtitle">{project.subtitle}</p>}
          <span class="card-btn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
            Conocer más
          </span>
        </div>
      </a>
    ))}
  </section>

  <!-- Detail Sections (hidden by default) -->
  {projects.map((project) => (
    <section
      id={project.id}
      class="project-detail"
      data-section={project.id}
      aria-labelledby={`title-${project.id}`}
    >
      <div class="container">
        <h2 id={`title-${project.id}`} class="detail-title">{project.title}</h2>

        <div class="detail-grid" role="list" data-gallery={project.id}>
          {project.items.map((item, itemIndex) => (
            <article
              class="detail-card"
              role="listitem"
              data-gallery-item
              data-index={itemIndex}
              data-image={item.image.replace('w=600&h=400', 'w=1200&h=800')}
              data-label={item.label}
              tabindex="0"
            >
              <div class="detail-card-image">
                <img
                  src={item.image}
                  alt={item.label}
                  width="300"
                  height="400"
                  loading="lazy"
                  decoding="async"
                />
              </div>
              <div class="detail-card-label">
                <span>{item.label}</span>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  ))}
</div>

<!-- Gallery Lightbox -->
<div class="gallery-lightbox" id="gallery-lightbox" aria-hidden="true" role="dialog" aria-modal="true">
  <div class="lightbox-overlay"></div>
  <div class="lightbox-content">
    <button class="lightbox-close" aria-label="Cerrar galería">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>

    <button class="lightbox-nav lightbox-prev" aria-label="Imagen anterior">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 18l-6-6 6-6"/>
      </svg>
    </button>

    <div class="lightbox-image-container">
      <img class="lightbox-image" src="" alt="" />
      <div class="lightbox-caption"></div>
    </div>

    <button class="lightbox-nav lightbox-next" aria-label="Imagen siguiente">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 18l6-6-6-6"/>
      </svg>
    </button>

    <div class="lightbox-counter"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const projectCards = document.querySelectorAll('.project-card');
    const allSections = document.querySelectorAll('.project-detail');

    // Hide all sections initially
    allSections.forEach(section => {
      section.style.display = 'none';
    });

    function showSection(targetId: string) {
      // Hide all sections first
      allSections.forEach(section => {
        section.style.display = 'none';
      });

      // Show the target section
      const targetSection = document.getElementById(targetId);
      if (targetSection) {
        targetSection.style.display = 'block';

        // Update URL hash
        history.pushState(null, '', `#${targetId}`);

        // Smooth scroll to section
        setTimeout(() => {
          targetSection.scrollIntoView({ behavior: 'smooth' });
        }, 50);
      }
    }

    projectCards.forEach(card => {
      card.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = card.getAttribute('data-target');
        if (targetId) {
          showSection(targetId);
        }
      });
    });

    // Handle direct URL access with hash
    if (window.location.hash) {
      const targetId = window.location.hash.substring(1);
      showSection(targetId);
    }

    // ============================================
    // Gallery Lightbox Functionality
    // ============================================
    const lightbox = document.getElementById('gallery-lightbox');
    const lightboxImage = lightbox?.querySelector('.lightbox-image') as HTMLImageElement;
    const lightboxCaption = lightbox?.querySelector('.lightbox-caption');
    const lightboxCounter = lightbox?.querySelector('.lightbox-counter');
    const lightboxClose = lightbox?.querySelector('.lightbox-close');
    const lightboxPrev = lightbox?.querySelector('.lightbox-prev');
    const lightboxNext = lightbox?.querySelector('.lightbox-next');
    const lightboxOverlay = lightbox?.querySelector('.lightbox-overlay');

    let currentGalleryItems: HTMLElement[] = [];
    let currentIndex = 0;

    function openLightbox(galleryItems: HTMLElement[], index: number) {
      currentGalleryItems = galleryItems;
      currentIndex = index;
      updateLightboxContent();

      if (lightbox) {
        lightbox.classList.add('active');
        lightbox.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
      }
    }

    function closeLightbox() {
      if (lightbox) {
        lightbox.classList.remove('active');
        lightbox.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      }
    }

    function updateLightboxContent() {
      const item = currentGalleryItems[currentIndex];
      if (!item || !lightboxImage || !lightboxCaption || !lightboxCounter) return;

      const imageSrc = item.getAttribute('data-image') || '';
      const label = item.getAttribute('data-label') || '';

      lightboxImage.src = imageSrc;
      lightboxImage.alt = label;
      lightboxCaption.textContent = label;
      lightboxCounter.textContent = `${currentIndex + 1} / ${currentGalleryItems.length}`;
    }

    function showPrevImage() {
      currentIndex = (currentIndex - 1 + currentGalleryItems.length) % currentGalleryItems.length;
      updateLightboxContent();
    }

    function showNextImage() {
      currentIndex = (currentIndex + 1) % currentGalleryItems.length;
      updateLightboxContent();
    }

    // Event listeners for gallery items
    document.querySelectorAll('.detail-card[data-gallery-item]').forEach(card => {
      const openGallery = () => {
        const grid = card.closest('.detail-grid');
        if (!grid) return;

        const galleryItems = Array.from(grid.querySelectorAll('[data-gallery-item]')) as HTMLElement[];
        const index = parseInt(card.getAttribute('data-index') || '0', 10);

        openLightbox(galleryItems, index);
      };

      card.addEventListener('click', openGallery);
      card.addEventListener('keydown', (e) => {
        if ((e as KeyboardEvent).key === 'Enter' || (e as KeyboardEvent).key === ' ') {
          e.preventDefault();
          openGallery();
        }
      });
    });

    // Lightbox controls
    lightboxClose?.addEventListener('click', closeLightbox);
    lightboxOverlay?.addEventListener('click', closeLightbox);
    lightboxPrev?.addEventListener('click', showPrevImage);
    lightboxNext?.addEventListener('click', showNextImage);

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (!lightbox?.classList.contains('active')) return;

      switch (e.key) {
        case 'Escape':
          closeLightbox();
          break;
        case 'ArrowLeft':
          showPrevImage();
          break;
        case 'ArrowRight':
          showNextImage();
          break;
      }
    });
  });
</script>

