---
import ServiceCard from '../molecules/ServiceCard.astro';
---

<section
  class="services"
  id="servicios"
  aria-labelledby="services-heading"
  itemscope
  itemtype="https://schema.org/Service"
>
  <div class="container">
    <h2 id="services-heading" class="section-title" itemprop="serviceType">Lo que hacemos</h2>
    <div class="services-grid" role="list">
      <div role="listitem" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        <meta itemprop="name" content="Subestaciones eléctricas" />
        <meta itemprop="description" content="Subestaciones eléctricas para Carga, Distribución y Transmisión" />
        <meta itemprop="category" content="Ingeniería Eléctrica" />
        <ServiceCard
          variant="image"
          imageUrl="https://images.unsplash.com/photo-1473341304170-971dccb5ac1e?w=600&q=80"
          buttonVariant="white"
          bottomText="Subestaciones eléctricas para Carga, Distribución y Transmisión."
        />
      </div>
      <div role="listitem" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        <meta itemprop="name" content="Centrales Eléctricas de Generación" />
        <meta itemprop="description" content="Centrales Eléctricas de Generación de energía" />
        <meta itemprop="category" content="Generación Eléctrica" />
        <ServiceCard
          variant="image"
          imageUrl="https://images.unsplash.com/photo-1480714378408-67cf0d13bc1b?w=600&q=80"
          buttonVariant="white"
          bottomText="Centrales Eléctricas de Generación."
        />
      </div>
      <div role="listitem" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        <meta itemprop="name" content="Redes eléctricas y líneas de transmisión" />
        <meta itemprop="description" content="Redes eléctricas y líneas de transmisión y Distribución" />
        <meta itemprop="category" content="Transmisión y Distribución" />
        <ServiceCard
          variant="image"
          imageUrl="https://images.unsplash.com/photo-1495954484750-af469f2f9be5?w=600&q=80"
          buttonVariant="white"
          bottomText="Redes eléctricas y líneas de transmisión y Distribución."
        />
      </div>
    </div>
  </div>
</section>

<style>
  .services {
    background: var(--color-white);
    padding: var(--spacing-3xl) 0;
  }

  .section-title {
    margin-bottom: 36px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
  }
</style>
