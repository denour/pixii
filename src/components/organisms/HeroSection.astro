      margin-bottom: 20px;
    }

    .hero-badge {
      font-size: 10px;
      padding: 8px 20px;
      margin-bottom: 20px;
      letter-spacing: 2px;
      white-space: normal;
      word-wrap: break-word;
      max-width: 100%;
    }

    .hero-button {
      padding: 10px 24px;
      font-size: 13px;
    }

    .carousel-dots-inside {
      margin-top: 20px;
    }

    .dot-inside {
      width: 7px;
      height: 7px;
    }

    .dot-inside.active {
      width: 9px;
      height: 9px;
    }
  }
</style>
