    max-width: 800px;
    width: 90%;
  }

  .hero-badge {
    display: inline-block;
    background: transparent;
    border: 2px solid #000000;
    padding: 10px 40px;
    border-radius: 100px;
    font-size: 13px;
    letter-spacing: 8px;
    color: #000000;
    font-weight: 700;
    margin-bottom: 28px;
    text-transform: uppercase;
    width: fit-content;
    max-width: 90%;
    white-space: nowrap;
  }

  .hero-title {
    margin: 0 0 24px 0;
  }

  .hero-description {
    font-size: 14px;
    font-weight: 600;
    line-height: 1.7;
    color: #2b2b2b;
    text-align: center;
    margin: 0 0 24px 0;
    max-width: 540px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #6B7280;
    color: #FFFFFF;
    padding: 12px 28px;
    border-radius: 8px;
