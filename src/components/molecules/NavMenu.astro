---
const navItems = [
  { label: 'Inicio', href: '/' },
  { label: 'Nosotros', href: '/nosotros' },
  { label: 'Proyectos', href: '/proyectos' },
  { label: 'Productos y Servicios', href: '/servicios' },
  { label: 'Contacto', href: '/contacto' }
];

// Get current path
const currentPath = Astro.url.pathname;
---

<!-- Desktop Navigation -->
<nav class="nav nav-desktop" role="navigation" aria-label="Navegación principal">
  {navItems.map((item, index) => {
    const isActive = currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href));
    return (
      <>
        <a
          href={item.href}
          class={`nav-link ${isActive ? 'active' : ''}`}
          aria-label={`Ir a ${item.label}`}
          aria-current={isActive ? 'page' : undefined}
        >
          {item.label}
        </a>
        {index < navItems.length - 1 && (
          <svg class="nav-separator" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        )}
      </>
    );
  })}
</nav>

<!-- Burger Menu Button -->
<button
  class="burger-menu"
  aria-label="Abrir menú de navegación"
  aria-expanded="false"
  aria-controls="mobile-nav"
  id="burger-btn"
>
  <span class="burger-line"></span>
  <span class="burger-line"></span>
  <span class="burger-line"></span>
</button>

<!-- Mobile Navigation -->
<nav class="nav nav-mobile" id="mobile-nav" role="navigation" aria-label="Navegación móvil">
  <div class="nav-mobile-content">
    {navItems.map((item) => {
      const isActive = currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href));
      return (
        <a
          href={item.href}
          class={`nav-link-mobile ${isActive ? 'active' : ''}`}
          aria-label={`Ir a ${item.label}`}
          aria-current={isActive ? 'page' : undefined}
        >
          {item.label}
        </a>
      );
    })}
  </div>
</nav>

<script>
  // Toggle mobile menu
  const burgerBtn = document.getElementById('burger-btn');
  const mobileNav = document.getElementById('mobile-nav');
  const mobileLinks = document.querySelectorAll('.nav-link-mobile');

  burgerBtn?.addEventListener('click', () => {
    const isOpen = burgerBtn.getAttribute('aria-expanded') === 'true';
    burgerBtn.setAttribute('aria-expanded', isOpen ? 'false' : 'true');
    mobileNav?.classList.toggle('active');
    document.body.style.overflow = isOpen ? 'auto' : 'hidden';
  });

  // Close mobile menu when clicking a link
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      burgerBtn?.setAttribute('aria-expanded', 'false');
      mobileNav?.classList.remove('active');
      document.body.style.overflow = 'auto';
    });
  });

  // Close mobile menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileNav?.classList.contains('active')) {
      burgerBtn?.setAttribute('aria-expanded', 'false');
      mobileNav?.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
  });
</script>

<style>
  /* Desktop Navigation */
  .nav-desktop {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .nav-link {
    color: var(--color-white);
    text-decoration: none;
    font-size: 13px;
    font-weight: 700;
    transition: color var(--transition-base);
    white-space: nowrap;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-primary);
  }

  .nav-separator {
    color: #FFFFFF;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    opacity: 1;
  }

  /* Burger Menu Button */
  .burger-menu {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 24px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1002;
    position: relative;
  }

  .burger-line {
    width: 100%;
    height: 3px;
    background-color: var(--color-white);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .burger-menu[aria-expanded="true"] .burger-line:nth-child(1) {
    transform: translateY(10.5px) rotate(45deg);
  }

  .burger-menu[aria-expanded="true"] .burger-line:nth-child(2) {
    opacity: 0;
  }

  .burger-menu[aria-expanded="true"] .burger-line:nth-child(3) {
    transform: translateY(-10.5px) rotate(-45deg);
  }

  /* Mobile Navigation */
  .nav-mobile {
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    height: 100vh;
    background: rgba(0, 0, 0, 0.98);
    backdrop-filter: blur(20px);
    z-index: 1001;
    transition: right 0.3s ease;
    padding-top: 80px;
    display: none;
  }

  .nav-mobile.active {
    right: 0;
  }

  .nav-mobile-content {
    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 20px;
  }

  .nav-link-mobile {
    color: var(--color-white);
    text-decoration: none;
    font-size: 18px;
    font-weight: 700;
    padding: 16px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-base);
    display: block;
  }

  .nav-link-mobile:hover,
  .nav-link-mobile.active {
    color: var(--color-primary);
    background: rgba(230, 57, 70, 0.1);
    padding-left: 30px;
  }

  .nav-link-mobile:last-child {
    border-bottom: none;
  }

  @media (max-width: 768px) {
    /* Hide desktop nav, show burger and mobile nav */
    .nav-desktop {
      display: none;
    }

    .burger-menu {
      display: flex;
    }

    .nav-mobile {
      display: block;
    }
  }

  @media (min-width: 769px) {
    /* Ensure mobile nav is hidden on desktop */
    .nav-mobile {
      display: none !important;
    }
  }
</style>
