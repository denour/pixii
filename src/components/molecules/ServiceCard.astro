---
import Button from '../atoms/Button.astro';

interface Props {
  title?: string;
  description?: string;
  variant: 'dark' | 'image';
  imageUrl?: string;
  buttonVariant?: 'red' | 'white';
}

const { title, description, variant, imageUrl, buttonVariant = 'red' } = Astro.props;
---

<div class:list={['service-card', `service-card-${variant}`]} style={imageUrl ? `background-image: url(${imageUrl})` : ''}>
  {variant === 'image' && <div class="card-overlay"></div>}
  <div class="card-content">
    {title && <h3 class="card-title">{title}</h3>}
    {description && <p class="card-description">{description}</p>}
    <Button variant={buttonVariant}>Ver m√°s</Button>
  </div>
</div>

<style>
  .service-card {
    position: relative;
    height: 400px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .service-card-dark {
    background: var(--color-black);
    padding: 36px;
  }

  .service-card-image {
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.6) 100%);
  }

  .card-content {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .service-card-image .card-content {
    padding: 36px;
    justify-content: flex-end;
  }

  .card-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 14px;
    line-height: 1.3;
  }

  .card-description {
    font-size: 13px;
    line-height: 1.6;
    color: #CCCCCC;
    flex: 1;
    margin-bottom: 20px;
  }
</style>
