---
import Button from '../atoms/Button.astro';

interface Props {
  title?: string;
  description?: string;
  variant: 'dark' | 'image';
  imageUrl?: string;
  buttonVariant?: 'red' | 'white';
  bottomText?: string;
}

const { title, description, variant, imageUrl, buttonVariant = 'red', bottomText } = Astro.props;
---

<div class:list={['service-card', `service-card-${variant}`]}>
  {variant === 'image' && imageUrl && (
    <div class="card-image-wrapper">
      <img
        src={imageUrl}
        alt=""
        class="card-image"
        loading="lazy"
        decoding="async"
      />
      <div class="card-overlay"></div>
    </div>
  )}
  <div class="card-content">
    {title && <h3 class="card-title">{title}</h3>}
    {description && <p class="card-description">{description}</p>}
  </div>
  {bottomText && (
    <div class="card-bottom">
      <p class="card-bottom-text">{bottomText}</p>
      <Button variant={buttonVariant}>Conoce m√°s</Button>
    </div>
  )}
</div>

<style>
  .service-card {
    position: relative;
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    background: var(--color-black);
  }

  .service-card-dark {
    padding: 36px;
  }

  .card-image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: calc(100% - 180px);
    border-radius: 12px 12px 0 0;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px 12px 0 0;
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.6) 100%);
  }

  .card-content {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    z-index: 2;
  }

  .service-card-image .card-content {
    padding: 36px;
    justify-content: flex-end;
  }

  .card-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 14px;
    line-height: 1.3;
  }

  .card-description {
    font-size: 13px;
    line-height: 1.6;
    color: #CCCCCC;
    flex: 1;
    margin-bottom: 20px;
  }

  .card-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #000000;
    padding: 24px 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 180px;
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
    z-index: 3;
  }

  .card-bottom-text {
    color: #FFFFFF;
    font-size: 18px;
    line-height: 1.6;
    text-align: justify;
    margin: 0;
  }

  @media (max-width: 768px) {
    .card-bottom-text {
      margin-bottom: 20px;
    }
  }
</style>
